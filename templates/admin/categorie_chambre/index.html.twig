{% extends 'admin.html.twig' %}

{% block title %}CategorieChambre index{% endblock %}

{% block content %}

    <a class="btn btn-primary m-1" type="button" href="{{ path('app_admin_categorie_chambre_new') }}">Ajouter Categorie</a>

    <div class="row">

        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Liste de Categorie</h5>
                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Id</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Nom</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">catdescription</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Action</h6>
                                </th>
{#                                <th class="border-bottom-0">#}
{#                                    <h6 class="fw-semibold mb-0">Budget</h6>#}
{#                                </th>#}
                            </tr>
                            </thead>
                            <tbody>

                            {% for categorie_chambre in categorie_chambres %}

                                <tr>
                                    <td class="border-bottom-0"><h6
                                                class="fw-semibold mb-0">{{ categorie_chambre.id }}</h6>
                                    </td>
                                    <td class="border-bottom-0">
                                        <h6 class="fw-semibold mb-1">{{ categorie_chambre.categoryName }}</h6>
                                    </td>
                                    <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal">{{ categorie_chambre.catdescription }}</p>
                                    </td>
                                    <td class="border-bottom-0">
                                        <div class="d-flex align-items-center gap-2">
                                            <a href="{{ path('app_admin_categorie_chambre_show', {'id': categorie_chambre.id}) }}">

                                            <span class="badge bg-danger rounded-3 fw-semibold">show</span>
                                            </a>



                                            <a href="{{ path('app_admin_categorie_chambre_edit', {'id': categorie_chambre.id}) }}">
                                            <span class="badge bg-primary rounded-3 fw-semibold">edit
                                            </span>
                                                </a>

                                        </div>

                                    </td>

                                </tr>
                            {% else %}

                                        <tr>
                                            <td colspan="4">no records found</td>
                                        </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
