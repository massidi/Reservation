
{% extends 'admin.html.twig' %}

{% block title %}CategorieChambre index{% endblock %}

{% block content %}

    <a class="btn btn-primary m-1" type="button" href="{{ path('app_equipement_new') }}">Ajouter Equipement</a>


    <div class="row">
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Liste de Equipement</h5>
                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">#</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Nom Equipement</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Description</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Action</h6>
                                </th>
                                {#                                <th class="border-bottom-0">#}
                                {#                                    <h6 class="fw-semibold mb-0">Budget</h6>#}
                                {#                                </th>#}
                            </tr>
                            </thead>
                            <tbody>

                            {% for equipement in equipements %}

                                <tr>
                                    <td class="border-bottom-0"><h6
                                                class="fw-semibold mb-0">{{ equipement.id }}</h6>
                                    </td>
                                    <td class="border-bottom-0">
                                        <h6 class="fw-semibold mb-1">{{ equipement.equipName }}</h6>
                                    </td>
                                    <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal">{{ equipement.equipdescription }}</p>
                                    </td>
                                    <td class="border-bottom-0">
                                        <div class="d-flex align-items-center gap-2">
                                            <a href="{{ path('app_equipement_show', {'id': equipement.id}) }}">

                                                <span class="badge bg-danger rounded-3 fw-semibold">Detail</span>
                                            </a>



                                            <a href="{{ path('app_equipement_edit', {'id': equipement.id}) }}">
                                            <span class="badge bg-primary rounded-3 fw-semibold">Editer
                                            </span>
                                            </a>

                                        </div>

                                    </td>

                                </tr>
                            {% else %}

                                <tr>
                                    <td colspan="4">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

