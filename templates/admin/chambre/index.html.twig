{% extends 'admin.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block content %}

    <div class="card bg-light-info shadow-none position-relative overflow-hidden">
        <div class="card-body px-4 py-3">
            <div class="row align-items-center">
                <div class="col-9">
                    <h4 class="fw-semibold mb-8">Hotel</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a class="text-muted text-decoration-none"
                                                           href="">Liste chambre</a></li>
                            <li class="breadcrumb-item" aria-current="page">
                                <a href="{{ path('app_admin_chambre_index') }}">
                                    Chambre
                                </a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>


    <a class="btn btn-primary" type="button" href="{{ path('app_admin_chambre_new') }}">Ajouter chambre</a>


    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>type de chambre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Nombre lit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.chamtype }}</td>
                <td>{{ chambre.chamdescription }}</td>
                <td>{{ chambre.prix }}</td>
                <td>{{ chambre.nbrlit }}</td>
                <td class="border-bottom-0">
                    <div class="d-flex align-items-center gap-2">
                        <a href="{{ path('app_admin_chambre_show', {'id': chambre.id}) }}">
                            <span class="badge bg-danger rounded-3 fw-semibold">show</span>
                        </a>
                        <a href="{{ path('app_admin_chambre_edit', {'id': chambre.id}) }}">
                            <span class="badge bg-primary rounded-3 fw-semibold">edit</span>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
