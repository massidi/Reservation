{% extends 'base.html.twig' %}

{% block title %}Rcommande index{% endblock %}

{% block body %}
    <h1>Rcommande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CommandeAt</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rcommande in rcommandes %}
            <tr>
                <td>{{ rcommande.id }}</td>
                <td>{{ rcommande.commandeAt ? rcommande.commandeAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rcommande.statut }}</td>
                <td>
                    <a href="{{ path('app_rcommande_show', {'id': rcommande.id}) }}">show</a>
                    <a href="{{ path('app_rcommande_edit', {'id': rcommande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rcommande_new') }}">Create new</a>
{% endblock %}
